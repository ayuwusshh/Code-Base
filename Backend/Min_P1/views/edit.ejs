<!-- profile.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

  <title>Edit</title>
</head>

<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
    <div class="w-full flex justify-end">
      <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block" href="/logout">Logout</a>
    </div>
    <h5 class="mb-5">Edit your post</h5>
    <form method="post" action="/update/<%= post._id %>">
      <textarea placeholder="What's on your mind"
        class="w-1/3 p-3 resize-none bg-transparent border-2 border-zinc-800 rounded-md outline-none block"
        name="content"><%= post.content %></textarea>
      <input class="px-3 py-2 rounded-md bg-yellow-500 text-black block mt-2 w-40" type="submit" value="Update post">
    </form>
  </div>
</body>

</html>