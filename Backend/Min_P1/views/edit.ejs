<!-- profile.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

  <title>MINI Project</title>
</head>

<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white">
    <div class="w-full flex justify-end">
      <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block" href="/logout">Logout</a>
    </div>
    <h3 class="text-3xl"><span class="font-light">Hello</span>
      <%= user.name %>ðŸ˜˜
    </h3>
    <h5 class="mb-5">You can create a post</h5>
    <form method="post" action="/post">
      <textarea placeholder="What's on your mind"
        class="w-1/3 p-3 resize-none bg-transparent border-2 border-zinc-800 rounded-md outline-none block"
        name="content"></textarea>
      <input class="px-3 py-2 rounded-md bg-blue-500 block mt-2 w-40" type="submit" value="Create post">
    </form>
    <div class="posts my-20">
      <h3 class="text-zinc-400">Your posts</h3>
      <div class="postcontainer mt-5">
        <% user.post.reverse(). forEach(function(post){ %>
          <div class="post w-1/3 p-4 mb-2 rounded-md border-[1px] border-zinc-800">
            <h4 class="text-blue-500 mt-3">@<%=user.username%>
            </h4>
            <p class="text-sm tracking-tighter">
              <%=post.content%>
            </p>
            <small class="mt-1 inline-block">
              <%= post.likes.length %>
            </small>
            <div class="btns flex mt-2 gap-3">
              <a class="text-blue-500" href="/like/<%=post._id%>">
                <%= post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %>
              </a>
              <a class="text-zinc-600 " href="/edit/<%=post._id%>">Edit</a>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </div>
</body>

</html>